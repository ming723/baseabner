<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/alert_layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:layout_centerInParent="true"
        android:minHeight="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是标题"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/alert_title"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_222"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示更新提示"
            android:id="@+id/alert_desc"
           android:layout_below="@+id/alert_title"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:minHeight="120dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ccc"
            android:layout_below="@+id/alert_desc"
            android:id="@+id/alert_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/alert_line"
            android:weightSum="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="取消"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/alert_cancle"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_ccc"
                android:layout_below="@+id/alert_desc"
                android:id="@+id/alert_line_h"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="确定"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:id="@+id/alert_confim"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
